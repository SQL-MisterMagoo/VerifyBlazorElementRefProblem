@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button @ref=btnReference class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    ElementReference btnReference;
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
